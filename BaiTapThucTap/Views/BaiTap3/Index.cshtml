@model List<BaiTap3>
<partial name="_Notification" />
<div class="row">
    <div class="col-md-6">
        <h2>LIST  Sản Phẩm</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> Add New
        </a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã Sản Phẩm</th>
            <th>Tên Sản Phẩm</th>
            <th>Loại Sản Phẩm</th>
            <th>Đơn Vị Tính</th>
            <th>Ghi Chú</th>
            <th> Action </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.Ma_San_Pham</td>
            <td>@x.Ten_San_Pham</td>
            <td>@(x.LoaiSP?.Ten_LSP ?? "Không có loại sản phẩm")</td>
            <td>@(x.DonViTinh?.Ten_Don_Vi_Tinh ?? "Không có đơn vị tính")</td>

            <td>@x.Ghi_Chu</td>
            <td>
                <a asp-action="Update" asp-route-id="@x.Id" asp-route-idDVT="@x.Don_Vi_Tin_ID"asp-route-idLSP="@x.Loai_San_Pham_ID" class="btn btn-success">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>