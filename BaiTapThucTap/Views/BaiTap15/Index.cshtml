@model BaiTapThucTap.Controllers.BaiTap15Controller.CombinedViewModel
<form asp-action="Index" method="post">
    <hr />
    <div class="form-group">
        <label>Nhập Ngày Bắt Đầu</label>
        <input asp-for="@Model.SearchModel.NgayBatDau" class="form-control" type="date" />
        <span asp-validation-for="@Model.SearchModel.NgayBatDau" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Nhập Ngày Kết Thúc</label>
        <input asp-for="@Model.SearchModel.NgayKetThuc" class="form-control" type="date" />
        <span asp-validation-for="@Model.SearchModel.NgayKetThuc" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
    <br>
    <br>
</form>

@if (Model.ListSearch != null && Model.ListSearch.Any())
{
    <div class="text-center">
        <h2>Báo cáo nhập kho</h2>
    </div>
    <br>
    <div id="Search">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Ngày nhập</th>
                    <th>Số phiếu nhập</th>
                    <th>Nhà cung cấp</th>
                    <th>Mã Sản Phẩm</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Số Lượng</th>
                    <th>Đơn Giá</th>
                    <th>Trị Giá</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.ListSearch)
                {
                    <tr>
                        <td>@(x.Bai7?.Ngay_Nhap_Kho)</td>
                        <td>@(x.Bai7?.So_Phieu_Nhap_Kho)</td>
                        <td>@(x.Bai7?.NCC?.Ten_NCC ?? "N/A")</td>
                        <td>@(x.Bai7_2?.sanpham?.Ma_San_Pham ?? "N/A")</td>
                        <td>@(x.Bai7_2?.sanpham?.Ten_San_Pham ?? "N/A")</td>
                        <td>@string.Format("{0:#,##0}", (x.Bai7_2?.SL_Nhap ?? 0))</td>
                        <td>@string.Format("{0:#,##0}", (x.Bai7_2?.Don_Gia_Nhap ?? 0))</td>
                        <td>@string.Format("{0:#,##0}", (x.TriGia))</td>
                    </tr>
                }
                <tr>
                    <td>Tổng</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>@string.Format("{0:#,##0}", Model.ListSearch.Sum(x => x.Bai7_2.SL_Nhap))</td>
                    <td></td>
                    <td>@string.Format("{0:#,##0}", Model.ListSearch.Sum(x => x.TriGia))</td>
                </tr>
            </tbody>
        </table>
    </div>
}
else
{
    <h2>Không có dữ liệu tìm kiếm nào.</h2>
}
